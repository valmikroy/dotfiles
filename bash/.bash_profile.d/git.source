function _git_top_level {
  execute git rev-parse --show-toplevel >  /dev/null 2>&1
  local ret=$?
  if [ $ret -ne 0 ]
  then
    return $ret
  else 
    execute git rev-parse --show-toplevel
  fi

}

function _git_fast_publish {

  read -p "Provide git commit message: " message 

  git add *
  git commit -m "$message"
  git push 
  git status

}

alias _git_stat="git status"
